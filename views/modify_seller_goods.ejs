        }

        .photo-3 {
            margin-left: 0.35rem;
            margin-right: 0.1rem;
        }

        .photo-file {
            position: absolute;
            top: 0;
            left: 0;
            z-index: 10;
            border: none;
            outline: none;
            margin-top: -0.5rem;
            width: inherit;
            height: inherit;
            overflow: hidden;
        }

        .photo img {
            position: absolute;
            top: 0;
            left: 0;
            z-index: 9;
            width: inherit;
            height: inherit;
