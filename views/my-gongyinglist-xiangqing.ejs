<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>Title</title>
    <script src="js/resize.js"></script>
    <script type="text/javascript"
            src="http://api.map.baidu.com/api?v=2.0&ak=w7BO0eP1z4hvNsbsW1nQ0xniRTh3Oj1K"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            font-weight: normal;
            list-style: none;
            font-family: 微软雅黑;
            text-decoration: none;
            box-sizing: border-box;
        }

        body {
            background: #f3f3f4;
        }

        .contian-wrapper {
            width: 100%;
        }

        .contian {
            width: 7.5rem;
            margin: 0 auto;
        }

        .qiugouxinagqing-header {
            width: inherit;
            padding-top: 1.3rem;
        }

        .qiugouxinagqing-header-top {
            position: fixed;
            top: 0;
            z-index: 30;
            width: inherit;
            height: 1.3rem;
            border-bottom: 0.01rem solid #c1c1c1;
            text-align: center;
            /*background: #ededed;*/
        }

        .qiugouxinagqing-header-top-back {
            display: inline-block;
            width: 100%;
            height: 100%;
        }

        .qiugouxinagqing-header-top i {
            display: inline-block;
            position: absolute;
            top: 0.64rem;
            left: 0.32rem;
            width: 0.23rem;
            height: 0.41rem;
            font-size: 0;
            cursor: pointer;
            background: url("./img/back_03.png") no-repeat;
            background-size: contain;
        }

        .qiugouxinagqing-header-top span {
            width: inherit;
            height: inherit;
            font-size: 0.36rem;
            color: #333333;
            text-align: center;
            vertical-align: middle;
        }

        .qiugouxinagqing-contain {
            /*height:100vh;*/
        }

        .qiugouxinagqing-body {
            width: 100%;
            background: #ffffff;
        }

        /*添加css*/
        .floatright {
            float: right;
        }

        .chanpin-info div {
            font-size: 0;
        }

        .chanpin-info-title {
            font-size: 0;
            height: 0.954rem;
            line-height: 0.954rem;
            padding: 0 0.3rem;
            border-bottom: 0.01rem solid #a3a3a3;
        }

        .chanpin-info-title span {
            font-size: 0.3rem;
            color: #333333;
        }

        #chanpin-info-title-right {
            color: #ff0000;
        }

        .contian-info-body {
            font-size: 0;
            /*padding-bottom: 0.35rem;*/
        }

        /*#chanpin-info-title-right-p-1{*/
        /*margin-top: 0;*/
        /*}*/
        .contian-info-body p {
            padding: 0 0.3rem;
            margin-top: 0.35rem;
        }

        .contian-info-body p span {
            font-size: 0.3rem;
            color: #777777;
        }

        .contian-info-body-title-1 {
            display: inline-block;
            width: 2rem;
        }

        .qgxq-desc {
            font-size: 0.28rem;
            color: #777777;
        }

        .qgxq-btn {
            padding: 0.4rem 0.3rem 0 0.3rem;
            width: 100%;
            height: 1.3rem;
        }

        .qgxq-button {
            display: inline-block;
            width: 1.55rem;
            height: 0.5rem;
            line-height: 0.5rem;
            font-size: 0;
            border: 0.01rem solid #59bb43;
            border-radius: 0.02rem;
            float: left;
        }

        .qgxq-button a {
            display: inline-block;
            width: 100%;
            height: 100%;
            text-align: center;
            font-size: 0.24rem;
        }

        .qgxq—de a {
            color: #ffffff;
        }

        .qgxq—de {
            background: #59bb43;
            margin-right: 0.5rem;
            float: right;
        }

        .qgxq-set a {
            color: #59bb43;
        }

        .qgxq-set {
            background: #ffffff;
            margin-right: 0.3rem;
            float: right;
        }

        .qiugouxinagqing-body-top-2-info-title {
            font-size: 0;
            height: 0.954rem;
            line-height: 0.954rem;
            padding: 0 0.3rem;
            border-bottom: 0.01rem solid #a3a3a3;
        }

        .qiugouxinagqing-body-top-2-info-title span {
            font-size: 0.3rem;
            color: #333333;
        }

        .qiugouxinagqing-body-top-wrapper p {
            padding: 0 0.3rem;
            font-size: 0;
            margin-top: 0.35rem;

        }

        .qiugouxinagqing-body-top-wrapper p span {
            font-size: 0.3rem;
            color: #777777;
        }

        .qiugouxinagqing-body-top-wrapper-title {
            display: inline-block;
            width: 2rem;
        }

        .qiugouxinagqing-tel {
            width: 100%;
            /*height: 0.8rem;*/
            font-size: 0;
            border-radius: 0.05rem;
            padding: 1rem 0 2rem 0;

        }

        .qiugouxinagqing-tel a {
            display: inline-block;
            width: 5.9rem;
            height: 0.8rem;
            margin: 0 0.6rem;
            font-size: 0.3rem;
            line-height: 0.8rem;
            text-align: center;
            color: #ffffff;
            background: #59bb43;
            border-radius: 0.1rem;
        }

        .seller-info {
            display: none;
        }

        .contian-info-body-title-1-desc {
            display: block;
            color: #777777;
            padding-left: 0.3rem;
            font-size: 0.3rem;
            padding-top: 0.35rem;
        }

        /*图片上传*/
        .ajax-photoseller {
            width: inherit;
            height: 2rem;
            padding: 0 0.3rem;
        }

        .photo {
            position: relative;
            display: inline-block;
            width: 2rem;
            height: 2rem;
            border: 1px solid #777777;
            overflow: hidden;
        }

        .photo-1 {
            margin-left: 0.1rem;
            margin-right: 0.35rem;
        }

        .photo-3 {
            margin-left: 0.35rem;
            margin-right: 0.1rem;
        }

        .photo-file {
            position: absolute;
            top: 0;
            left: 0;
            z-index: 10;
            border: none;
            outline: none;
            margin-top: -0.5rem;
            width: inherit;
            height: inherit;
            overflow: hidden;
        }

        .photo img {
            position: absolute;
            top: 0;
            left: 0;
            z-index: 9;
            width: inherit;
            height: inherit;
        }

        .map {
            width: 6.9rem;
            height: 3rem;
            margin: 0.15rem 0.3rem 0.15rem 0.3rem;
        }

        #qgxq-desc {
            padding-bottom: 0.5rem;
        }
        #btn{
            background: #f8f8f8;
        }
    </style>
    <link href="/css/com.css" rel="stylesheet" type="text/css">
</head>
<body>
<div class="contian-wrapper">
    <div class="contian qiugouxinagqing-contain">
        <div class="qiugouxinagqing-header top-bg">
            <div class="qiugouxinagqing-header-top">
                <i><a href="javascript:void(0)" onclick="history.go(-1)"
                      class="qiugouxinagqing-header-top-back"></a></i>
                <span><%= my_seller.seller_name %></span>
            </div>
        </div>
        <div class="qiugouxinagqing-body">
            <div class="chanpin-info">
                <p class="chanpin-info-title">
                    <span class=""><%= my_seller.seller_name %></span>
                    <span class="floatright" id="chanpin-info-title-right"><%= my_seller.seller_weight %></span>
                </p>
                <div class="contian-info-body">
                    <p id="chanpin-info-title-right-p-1">
                        <span class="contian-info-body-title-1">编&emsp;&emsp;号：</span>
                        <span class="contian-info-body-info-1">16060615444462610</span>
                    </p>
                    <!--
                     蔬菜：1
                     水果：2
                     禽类：3
                     水产：4
                    -->
                    <p>
                        <span class="contian-info-body-title-1">供求类别：</span>
                        <% if(my_seller.type == 1){ %>
                        <span class="contian-info-body-info-1">蔬菜</span>
                        <% } %>
                        <% if(my_seller.type == 2){ %>
                        <span class="contian-info-body-info-1">水果</span>
                        <% } %>
                        <% if(my_seller.type == 3){ %>
                        <span class="contian-info-body-info-1">禽类</span>
                        <% } %>
                        <% if(my_seller.type == 4){ %>
                        <span class="contian-info-body-info-1">水产</span>
                        <% } %>
                    </p>
                    <p>
                        <span class="contian-info-body-title-1">供求单价：</span>
                        <span class="contian-info-body-info-1"><%= my_seller.seller_price %></span>
                    </p>
                    <p>
                        <span class="contian-info-body-title-1">供求数量：</span>
                        <span class="contian-info-body-info-1"><%= my_seller.seller_weight %></span>
                    </p>
                    <p>
                        <span class="contian-info-body-title-1">产地：</span>
                        <span class="contian-info-body-info-1"><%= my_seller.seller_site.pro %>
                            --<%= my_seller.seller_site.city %> </span>
                    </p>
                    <div>
                        <span class="contian-info-body-title-1 contian-info-body-title-1-desc">产品描述：</span>
                        <p class="qgxq-desc" id="qgxq-desc"><%= my_seller.seller_desc %></p>
                    </div>
                    <div class="ajax-photoseller bianji-bg">
                        <div class="photo-1 photo">

                            <img src="<%= my_seller.pic1 %>" class="file-img-1" alt="">
                        </div>
                        <div class="photo-2 photo">
                            <img src="<%= my_seller.pic2 %>" class="file-img-1" alt="">
                        </div>
                        <div class="photo-3 photo">
                            <img src="<%= my_seller.pic3 %>" class="file-img-1" alt="">
                        </div>
                    </div>

                    <!--百度地图-->
                    <div>
                        <span class="contian-info-body-title-1 contian-info-body-title-1-desc">地图导航：</span>
                        <div class="map" id="allmap"></div>
                    </div>
                </div>
                <div class="qgxq-btn" id="btn">

                    <span class="qgxq-button qgxq-set"><a href="/delete_gongyingxiangqing?detele_tel=<%= my_seller.info_tel %>&delete_seller_number=<%= my_seller.number %>">删除</a></span>
                    <span class="qgxq-button qgxq—de"><a href="/modify_gongyingxiangqing?detele_tel=<%= my_seller.info_tel %>&modify_seller_number=<%= my_seller.number %>"">修改</a></span>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
<script type="text/javascript">
    // 百度地图API功能
    var map = new BMap.Map("allmap");
    //    map.centerAndZoom(point,12);
    map.centerAndZoom(18);
    //    map.enableScrollWheelZoom(true);//开启鼠标滚轮缩放功能。仅对PC上有效

    // 创建地址解析器实例
    var myGeo = new BMap.Geocoder();
    // 将地址解析结果显示在地图上,并调整地图视野
    myGeo.getPoint("河南省郑州市高新技术开发区", function (point) {
        if (point) {
            map.centerAndZoom(point, 13);
//            map.centerAndZoom(18);
            map.addOverlay(new BMap.Marker(point));
        } else {
            alert("您选择地址没有解析到结果!");
        }
    });
</script>
</html>
