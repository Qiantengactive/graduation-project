<script src="/js/baidu.js"></script>
<script>
    var i = 1;
    $(".my-body-top-2-info-title-2").click(function () {
        i++;
        if (i % 2 == 0) {
            $(".my-input1").attr("readonly", false).css("color", '#ff0000');
            $(".my-body-top-2-info-title-2").html("保存");
        } else {
            $(".my-body-top-2-info-title-2").html("编辑");
//            $(".my-input").attr("readonly", true).css("color", '#333333');
            $(".my-input1").removeAttr("readonly").css("color", '#333333');

            var data = {
                "info_name": $("#user_name").val(),
                "info_site": {
                    "info_pro": "河南省",
                    "info_city":  $("#user_city").val(),
                    "info_detail_add":  $("#user_add").val()
                }
            }
            console.log(data);
        }
    });
    $("#clipArea").photoClip({
        width: 120, //截取区域的宽度
        height: 120, //截取区域的高度
        file: "#file1",  //上传图片的<input      type="file">控件的选择器或者DOM对象
//        view: "#view",  //显示截取后图像的容器的选择器或者DOM对象。
        ok: "#clipBtn", //确认截图按钮的选择器或者DOM对象。
        loadStart: function () {  //开始加载的回调函数。this指向 fileReader 对象，并将正在加载的 file 对象作为参数传入。
            console.log("照片读取中");
            $(".upload").css("display", "block")
        },
        loadComplete: function () { //loadComplete：加载完成的回调函数。this指向图片对象，并将图片地址作为参数传入。
            console.log("照片读取完成");
            //打开截图页面   截图页面有两个按钮 一个上传完成一个退出
        },
        clipFinish: function (dataURL) { //裁剪完成的回调函数。this指向图片对象，会将裁剪出的图像数据DataURL作为参数传入。
            /*裁剪完成 上传数据*/
            var info_avater = {
                tel:<%= user_info.info_tel %>,
                info_avater: dataURL
            };
            $.post("/info_avater", info_avater, function (data) {
//                console.log(data);
                if (data.data) {
                    /*成功
                     * 2.关闭浮层
                     * 1.将图片地址替换成dataURL
                     * */
                    location.reload(location.href);
                    $(".upload").css("display", "none");
                    $(".avater").css("background-img", 'url(' + dataURL + ')')

                } else {
                    /*失败*/
                }
            });
        }
    });
</script>
